SERVER1_OS=windows
SERVER1_NAME=Firebird Windows
SERVER1_HOST=192.168.10.31
SERVER1_PORT=3051
SERVER1_DATABASE=C:\Soluvert\Dados\dados.fdb
SERVER1_USER=sysdba
SERVER1_PASSWORD=masterkey
# SERVER1_QUERY=SELECT COUNT(*) FROM agenda  # Query específica (opcional)

# ────────────────────────────────────────────────────────────────────────────────
